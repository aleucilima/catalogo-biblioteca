@model CatalogoBiblioteca.Domain.Entities.Publisher

<h2>Cadastro de Editora</h2>

<form class="form-horizontal" asp-action="Save" asp-controller="Publisher" method="POST">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="form-group">
        <label for="CNPJ" class="col-md-1 control-label">CNPJ</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="CNPJ" placeholder="00.000.000/0000-00">
        </div>
    </div>
    <div class="form-group">
        <label for="Name" class="col-md-1 control-label">Nome</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Name" placeholder="Nome fantasia">
        </div>
    </div>
    <div class="form-group">
        <label for="Address" class="col-md-1 control-label">Endereço</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Address" placeholder="Endereço completo">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success">Salvar</button>
        </div>
    </div>

</form>