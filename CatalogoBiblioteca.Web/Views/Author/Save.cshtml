@model CatalogoBiblioteca.Domain.Entities.Author

<h2>Cadastro de Autores</h2>

<form class="form-horizontal" asp-action="Save" asp-controller="Author" method="POST">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="form-group">
        <label for="Name" class="col-md-1 control-label">Nome</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Name" placeholder="Nome Completo">
        </div>
    </div>
    <div class="form-group">
        <label for="CPF" class="col-md-1 control-label">CPF</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="CPF" placeholder="000.000.000-00">
        </div>
    </div>
    <div class="form-group">
        <label for="Phone" class="col-md-1 control-label">Celular</label>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Phone" placeholder="(**) 9****-****">
        </div>
    </div>
    <div class="form-group">
        <label for="Email" class="col-md-1 control-label">E-mail</label>
        <div class="col-md-4">
            <input type="email" class="form-control" asp-for="Email" placeholder="email@email.com">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-success">Salvar</button>
        </div>
    </div>
</form>